{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "lib",
    "allowJs": true,
    "rootDir": "/",
    "lib": [
      "es2021"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "lib/**/*"
  ],
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts"
  ]
}
